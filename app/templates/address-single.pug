//- title: Index Page
extends layouts/_layout
block head
  - var title = 'Адреса'
  - var activeMenu = 0
block content
  .layout
    // start adresses
    section.address-single-page
      .page-top
        .container
          h1.section-heading Адреса и время работы
      // start banner-slider
      .banner-slider.swiper-container
        .swiper-wrapper 
          .swiper-slide
            a.banner-image-link(href="#" style="background-image: url(img/banner.jpg)")
          .swiper-slide
            a.banner-image-link(href="#" style="background-image: url(img/banner.jpg)")
          .swiper-slide
            a.banner-image-link(href="#" style="background-image: url(img/banner.jpg)")
        .swiper-pagination
      // end banner-slider
      // start address-single
      .address-single 
        .address-single-top
          .container
            h2.heading Медицинский офис «Бережковский»
            a.back-link-secondary(href="#") Вернуться к списку
        // start address-single-details
        .address-single-details
          .container
            .address-single-group
              .address-location 121059, г. Москва, Бережковская наб., д. 20, стр. 13
              .address-single-metros
                a.address-metro-link.color-brown(href="#") 
                  span.dot
                  span.text Киевская
                a.address-metro-link.color-blue(href="#")
                  span.dot
                  span.text Студенческая
            a.face-card-link.fancybox(href="#face-card")
              span Карточка #[br] юридического лица
            a.print(href="#")
              span.text Распечатать
              span.icon-print
        // end address-single-details
        // start table-responsive
        .table-responsive
          table.custom-table.custom-table-thead-grey
            thead
              tr
                th Вид услуги
                th пн.
                th вт.
                th ср.
                th чт.
                th пт.
                th сб.
                th вс.
            tbody
              tr
                td Взятие биоматериала
                td 7:00-17:00
                td 7:00-17:00
                td 7:00-17:00
                td 7:00-17:00
                td 7:00-17:00
                td 8:00-15:00
                td —
              tr
                td Выдача результатов
                td 7:00-17:00
                td 7:00-17:00
